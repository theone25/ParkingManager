<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.parkingmanager.controllers.RegistrationController">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100.0" prefWidth="100.0">
        </ColumnConstraints>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200.0" prefWidth="200.0">
        </ColumnConstraints>
    </columnConstraints>
    <children>

        <!-- Add Header Label -->
        <Label text="Inscription" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.rowSpan="1">
            <font>
                <Font name="Arial" size="24" />
            </font>
            <GridPane.margin>
                <Insets bottom="20" top="20" />
            </GridPane.margin>
        </Label>


        <!-- Add Name Label -->
        <Label text="Nom" GridPane.columnIndex="0" GridPane.rowIndex="1">
        </Label>
        <!-- Add Name Text Field -->
        <TextField fx:id="nameField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="1" />


        <!-- Add Last name Label -->
        <Label text="PrÃ©nom" GridPane.columnIndex="0" GridPane.rowIndex="2">
        </Label>

        <!-- Add Last name Text Field -->
        <TextField fx:id="lastNameField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2" />


        <!-- Add Email Label -->
        <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="3">
        </Label>
        <!-- Add Email Text Field -->
        <TextField fx:id="emailField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <!-- Add Password Label -->
        <Label text="Mot de passe" GridPane.rowIndex="4" />
        <!-- Add Password Field -->
        <PasswordField fx:id="passwordField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <!-- Add Errors box-->
        <Text fx:id="errorsBox" fill="red" GridPane.columnIndex="1" GridPane.rowIndex="5" />


        <!-- Add Submit Button -->
        <Button fx:id="submitButton" defaultButton="true" onAction="#handleSubmitButtonAction" prefHeight="40" prefWidth="100" text="S'inscrire" textFill="WHITE" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="7" GridPane.rowSpan="1">
            <GridPane.margin>
                <Insets bottom="20" left="0" right="0" top="20" />
            </GridPane.margin>
        </Button>
      <Button fx:id="btnImage" mnemonicParsing="false" onAction="#actionImage" text="Image" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    </children>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
      <RowConstraints />
      <RowConstraints />
    </rowConstraints>
</GridPane>
